{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["mocha"]
  },
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "./deploy",
    "./scripts",
    "./tasks",
    "./test",
    "./utils",
    "./types",
    "typechain/**/*",
    "./helper-hardhat-config.ts"
  ],
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"]
}
